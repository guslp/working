<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DuDébut" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DarkGray</item>
        <item name="colorPrimaryVariant">@color/DarkGray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Créer le composant pour le titre par défaut -->
    <style name="defaultTextstyle">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>
    <!-- Créer le composant pour le sous titre par défaut -->
    <style name="subtitleTextstyle" parent="defaultTextstyle">
        <item name="android:textColor">@color/DarkGray</item>
    </style>

    <!-- Créer le composant pour le sous titre par défaut -->
    <style name="TitleTextstyle" parent="subtitleTextstyle">
        <item name="android:textSize">24sp</item>
    </style>

</resources>